class Song(object):

    def __init__(self, lyrics, artist,title):
        self.lyrics = lyrics
        self.artist = artist
        self.title = title

    def sing_me_a_song(self):
        print self.artist
        print self.title
        for line in self.lyrics:
            print line

Bohemian_Rhapsody = Song(["Is this the real life?",
                   "Is this just fantasy?",
                   "Caught in a landlide,",
                    "No escape from reality"],"Queen", "Bohemian Rhapsody")

hotline_bling = Song(["You used to call me on my",
                      "You used to, you used to",
                      "Yeah"], "Drake", "Hotline Bling")
# This is your daily reminder that Drake is Canadian

Bohemian_Rhapsody.sing_me_a_song()
hotline_bling.sing_me_a_song()
